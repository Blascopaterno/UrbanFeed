<% if user_signed_in? && current_user.mayor == true %>
  <div class="homepage-container">
    <div class="presentation">
      <div class="welcome-message">
        <h2>Welcome to</h2>

        <div class="container-intro" id="m-container-intro">
          <h1>Urban</h1>
          <h1 id="display-inline-block" >Feed</h1>
          <div id="m-sub-welcome"><p>Politician</p></div>
        </div>
      </div>
    </div>

    <div class="container-intro">
      <p id = "p-intro">Use our tools to target the maximum amout of citizens!</p>
    </div>

    <p id= tool>Select a tool :</p>

    <div id="actions">
      <%= link_to city_path(current_user.city) do %>
        <%= image_tag('MAPTOOL-ICON.png', width: 140, height: 140) %>
      <% end %>

      <%= link_to emails_path do %>
        <%= image_tag('EMAILTOOL-ICON.png', width: 140, height: 140) %>
      <% end %>

    </div>
  </div>
   <div class="tool-instruction1">
        <p> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;Find the most </p> <p>&nbsp; &nbsp; supported complaints</p>
         </div>

   <div class="tool-instruction2">
        <p> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;Send emails </p> <p>on your chosen complaints </p>
         </div>
<% else %>

  <div class="homepage-container">
    <div class="welcome-message">
      <h2>Welcome to</h2>
      <div class="container-intro">
        <h1>Urban</h1>
        <h1 id="display-inline-block" >Feed</h1>
      </div>
    </div>
    <div class="container-intro">
      <p>Report incidences on your</p>
      <p>neighbourhood</p>
    </div>
  </div>
    <%= form_tag complaints_path, method: :get do %>
      <div class="form_box home_form">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control-style",
          id: "complaint-address",
          placeholder: " Introduce your location"%>
       <i class="fas fa-map-marker-alt"></i>
        <%= submit_tag "Go!", class: "btn btn-primary square-btn-blue" %>
      </div>
    <% end %>
  </div>
<% end %>



