<div class="signup-form-intro">
  <h2>Create account</h2>
  <p>Are you a politician or a concerned citizen?</p>
  <p>Please select account type</p>
</div>

<div class="masha-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="signup-form-img">
    <div class="politician">
    <label class="checkbox">
      <%= image_tag("politician_icon.jpg", width: 130, height: 110) %>
      <%= f.input :mayor, as: :boolean, checked_value: true, unchecked_value: false, label: false, input_html: { class: "hidden" }%></label>
      </div>
      <div class="citizen">
      <label class="checkbox" ><%= image_tag("citizen_icon.jpg", width: 130, height: 110)%>
        <%= f.input :mayor, as: :boolean, checked_value: false, unchecked_value: true, label: false, input_html: { class: "hidden" }%></label>
        </div>
      </div>

<p>              </p>
 <div class="signup-form-intro">
  <p>*Compulsory fields</p>
  </div>

  <div class="signup-form-inputs">
    <div class="form-inputs">
      <%= f.input :name,
      required: true,
      autofocus: true,
      placeholder: "      name                                               *",
      input_html: { autocomplete: "name" }%>
      <i class="fas fa-user"></i>

      <%= f.association :city,
      required: true,
      autofocus: true,
      placeholder: "city",
      input_html: { autocomplete: "city" }%>

      <%= f.input :profession,
      required: true,
      autofocus: true,
      placeholder: "      profession",
      input_html: { autocomplete: "profession" }%>
      <i class="fas fa-briefcase"></i>

      <%= f.input :email,
      required: true,
      autofocus: true,
      placeholder: "      email                                               *",
      input_html: { autocomplete: "email" }%>
      <i class="fas fa-envelope"></i>

      <%= f.input :password,
      required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      placeholder: "      password                                        *",
      input_html: { autocomplete: "new-password" } %>
      <i class="fas fa-lock" id= "initial"></i>

      <%= f.input :password_confirmation,
      required: true,
      placeholder: "      confirm password                          *",
      input_html: { autocomplete: "new-password" } %>
      <i class="fas fa-lock" id= "confirmation"></i>

        </div>
      </div>


<div class="form-actions">
  <div class="btn-color">
    <%= f.button :submit, "create account" %>
  </div>
</div>
<% end %>

</div>


