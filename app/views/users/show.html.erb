<div class="userprofile-container">
  <h2>Citizen profile</h2>
  <div id="p-margins">
    <p><strong>Name: </strong><%= @user.name %></p>
    <p><strong>Profession: </strong><%= @user.profession %></p>
  </div>
  <h2><%= @user.name %>'s complaint history</h2>
  <div class="profile-info-container">
    <% Complaint.where(user_id:@user.id).each do |complaint| %>
    <p><strong>Description: </strong><%= complaint.description %></p>
    <p><strong>Type: </strong><%= complaint.type.name %></p>
    <div class="upvote-container">
      <p><%= complaint.upvote %><i class="fas fa-thumbs-up"></i></p>
    </div>
  </div>
  <% end %>
</div>

<% if current_user.mayor == true %>
  <p><%= link_to 'Back', city_path(City.first.id) %></p>
<% else %>
  <p><%= link_to 'Back', complaints_path %></p>
<% end %>
