<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="nav-height">
  <% if user_signed_in? && current_user.mayor == true %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <div id="container-logo-nav">
        <h6>Urban</h6><h6 class="blue-font">Feed</h6>
      </div>
    <% end %>
  <% else %>
    <%= link_to complaints_path, class: "navbar-brand" do %>
      <div id="container-logo-nav">
        <h6>Urban</h6><h6 class="blue-font">Feed</h6>
      </div>
    <% end %>
  <% end %>

  <div id="flex">
    <span id="padding-for-signup">
      <% unless user_signed_in? %>
        <%= link_to 'sign up', new_user_registration_path, class: "signup-link"%>
      <% end %>
    </span>

    <div id="padding-for-login">
      <% if user_signed_in? %>
        <div id="padding-for-username">
          <%= link_to profile_path, id: "username-style" do%>
             <%= current_user.name %><%#= link_to image_tag("USERICON.png", width: 30, height: 30) %>
          <% end %>
        </div>
      <% else %>
        <h6 data-toggle="modal" data-target="#loginModal">login</h6>
      <% end %>
      <div id="mail-logo">
        <% if user_signed_in? && current_user.mayor == true %>
          <%= link_to emails_path, class: "signup-link" do %>
            <%= image_tag("email-icon.png", width: 25, height: 25) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <%= render "shared/loginform" %>
      </div>
    </div>
  </div>
</div>
