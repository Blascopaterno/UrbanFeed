<%= simple_form_for(@complaint) do |f| %>
<div class="form-center">
  <div class="create_form">
        <%= f.input :address, input_html: {class: "form-control-no-pa"} %>
        <%= f.association :type, as: :radio_buttons, input_html: {class: "hidden"}, collection: Type.all, value_method: :id  %>
        <%= f.association :category,
        include_blank: "Select Option",
         collection: Category.all,  value_method: :id %>
        <dt><%= f.input :description, placeholder: "Please describe your complaint.", input_html: {class: "form-control-no-pa"}%></dt>
        <label class="form-control-file file" type="file" name="complaint[picture]" id="complaint_picture"> <%=image_tag("ADDPHOTOBUTTON.png", width: 130, height: 40)%>
        <%= f.input :picture, as: :file, label: false %>
        <%= f.input :picture_cache, as: :hidden %>
        <img id="attached" class="image-attachment" src="" />
        <%= f.submit class: "btn-flat-create btn" %>
    <% end %>
  </div>
</div>



