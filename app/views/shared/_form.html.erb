  <%= simple_form_for(@complaint) do |f| %>
  <div class="create_form">
      <dt><%= f.input :description %></dt>
      <%= f.input :address %></dt>
      <%= f.input :category,
                  collection: ["Safety", "Maintenance", "Accessibility", "Sustainbility", "Quality"]%>
      <%= f.input :type, as: :radio_buttons, input_html: {class: "hidden"}, collection: ["Bridge", "Road", "Parc", "Public Building"] %>
      <%= f.input :picture %>
      <%= f.input :picture_cache, as: :hidden %>
      <%= f.submit class: "btn-flat-create" %>
      <%= cl_image_tag @complaint.picture, height: 300, width: 400, crop: :fill %>
  <% end %>
