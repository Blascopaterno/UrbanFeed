<div class="modal fade" id="showModal_<%= complaint.id %>" tabindex="-1" role="dialog" aria-labelledby="showModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="show-form">
        <div class="complaint-head">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h6 class="modal-title" id="exampleModalLongTitle">Complaint details</h6>
        </div>

        <p><strong><%= complaint.address %></strong></p>
        <h6 id="category"><%= complaint.category.name %></h6>
        <p id="description"><%= complaint.description %></p>
        <p><strong>Author : </strong><%= link_to complaint.user.name, user_path(complaint.user) %></p>
        <p><strong>Reported on : </strong><%= complaint.created_at %></p>
        <!-- The photo is displayed below -->
        <div class="upvote-complaints">
          <% if complaint.picture.present? %>
          <div class="complaint_image">
            <%= cl_image_tag(complaint.picture, crop: :fill) %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="upvote">
        <div class="col-4 upvote-complaints" id="<%= complaint.id %>" >
          <%= link_to upvote_path(complaint: complaint),method: :put, remote: :true do %>
          <%= render 'likes', complaint: complaint %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
